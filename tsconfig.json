{
  "compilerOptions": {
    "rootDir": "ts",
    "outDir": "dist",
    "target": "ES2022",
    "lib": [
      "ES2022", "DOM"
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
